# User Service Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
HOSTNAME=localhost
IP_ADDRESS=127.0.0.1

# Application Name (for Eureka registration)
APP_NAME=user-service

# Eureka Configuration
EUREKA_ENABLED=true
EUREKA_URL=http://localhost:8761/eureka

# Config Server (optional for future use)
CONFIG_SERVER_URL=http://localhost:8888
CONFIG_SERVER_ENABLED=false

# API Gateway
API_GATEWAY_URL=http://localhost:8090

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce_users
DB_USER=postgres
DB_PASSWORD=postgres
DB_DIALECT=postgres
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=Ecommerce
KEYCLOAK_CLIENT_ID=ecommerce-user-service
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:4200,http://localhost:8090

# Logging
LOG_LEVEL=info
